<div class="content">
    <h1>Extras</h1>
    <h2>Import devices:</h2>
    <%= form_tag({action: :import_devices}, multipart: true) do %>
        <div class="file">
            <label class="file-label" for="file">
                <%= file_field_tag 'file', class: "file-input" %>
                <span class="file-cta">
                    <span class="file-icon">
                        <%= icon('upload') %>
                    </span>
                    <span class="file-label">
                        Select fileâ€¦
                    </span>
                </span>
            </label>
            <%= submit_tag "Upload", class: "button is-primary" %>
        </div>
    <% end %>

    <h2>Export devices:</h2>
    <%= link_to 'Export', '/extras/export_devices', class: 'button'%>
</div>
